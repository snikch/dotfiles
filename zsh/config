	source ~/.gnupg/.gpg-agent-info
	export GPG_AGENT_INFO
else
#	eval $(gpg-agent --daemon ~/.gnupg/.gpg-agent-info)
fi
export GPG_TTY=$(tty)

# NVM setup
export NVM_DIR="$HOME/.nvm"
[ -s "/usr/local/homebrew/opt/nvm/nvm.sh" ] && . "/usr/local/homebrew/opt/nvm/nvm.sh"  # This loads nvm
[ -s "/usr/local/homebrew/opt/nvm/etc/bash_completion" ] && . "/usr/local/homebrew/opt/nvm/etc/bash_completion"  # This loads nvm bash_completion
# This slows new tabs down pretty bad :(
#source $(brew --prefix nvm)/nvm.sh

